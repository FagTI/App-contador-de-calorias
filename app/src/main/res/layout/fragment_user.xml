<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button"
    android:backgroundTint="#000000"
    android:backgroundTintMode="screen"
    tools:context=".fragments.UserFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        tools:context=".UserConfig">

        <View
            android:id="@+id/contrainer_user"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/container_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user"
            app:layout_constraintBottom_toBottomOf="@id/contrainer_user"
            app:layout_constraintEnd_toEndOf="@id/contrainer_user"
            app:layout_constraintStart_toStartOf="@id/contrainer_user"
            app:layout_constraintTop_toTopOf="@id/contrainer_user" />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contrainer_user" />

        <TextView
            android:id="@+id/text_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_user_name" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginBottom="20dp"
            android:height="20dp"
            android:background="@drawable/button"
            android:backgroundTint="#000000"
            android:onClick="logout"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/container_components"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/container_components"
            android:elevation="5dp"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_user_email" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="11dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/container_components"
            app:layout_constraintEnd_toEndOf="@+id/container_components"
            app:layout_constraintStart_toStartOf="@+id/container_components"
            app:layout_constraintTop_toTopOf="@+id/container_components">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="11dp"
                    android:text="Idade:"
                    android:textColor="#9A000000"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="40dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/text_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="11dp"
                    android:text="Nascimento:"
                    android:textColor="#9A000000"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="11dp"
                    android:text="Sexo:"
                    android:textColor="#9A000000"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="40dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/text_user_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="11dp"
                    android:text="Sexo:"
                    android:textColor="#9A000000"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="11dp"
                    android:text="Altura:"
                    android:textColor="#9A000000"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="40dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/text_user_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="11dp"
                    android:text="Altura:"
                    android:textColor="#9A000000"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="11dp"
                    android:text="Peso:"
                    android:textColor="#9A000000"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="40dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/text_user_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="11dp"
                    android:text="Peso:"
                    android:textColor="#9A000000"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
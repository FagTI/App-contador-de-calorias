<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/container_components_Carb2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/container_components"
            android:elevation="5dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_components_Carb" />

        <TextView
            android:id="@+id/textView_Fat_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="Gorduras"
            android:textColor="#2E8193"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/container_components_Carb2"
            app:layout_constraintTop_toTopOf="@+id/container_components_Carb2" />

        <TextView
            android:id="@+id/textView_Fat_Consumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView_Fat_Title"
            app:layout_constraintTop_toTopOf="@+id/container_components_Carb2" />

        <TextView
            android:id="@+id/textView_Fat_Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="225dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView_Fat_Consumed"
            app:layout_constraintTop_toTopOf="@+id/container_components_Carb2" />

        <ProgressBar
            android:id="@+id/progressbar_Fat"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:elevation="11dp"
            android:indeterminateOnly="false"
            android:progress="20"
            android:scrollbarSize="50dp"
            android:progressDrawable="@drawable/custom_progressbar_gordura"
            app:layout_constraintBottom_toBottomOf="@+id/container_components_Carb2"
            app:layout_constraintEnd_toEndOf="@+id/container_components_Carb2"
            app:layout_constraintStart_toStartOf="@+id/container_components_Carb2"
            app:layout_constraintTop_toBottomOf="@+id/textView_Fat_Title" />

        <View
            android:id="@+id/container_components_Carb"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/container_components"
            android:elevation="5dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_components_Carb3" />

        <ProgressBar
            android:id="@+id/progressbar_Carb"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:elevation="11dp"
            android:indeterminateOnly="false"
            android:progress="40"
            android:scrollbarSize="50dp"
            android:progressDrawable="@drawable/custom_progressbar_carb"
            app:layout_constraintBottom_toBottomOf="@+id/container_components_Carb"
            app:layout_constraintEnd_toEndOf="@+id/container_components_Carb"
            app:layout_constraintStart_toStartOf="@+id/container_components_Carb"
            app:layout_constraintTop_toBottomOf="@+id/textView_Carb_Title"/>

        <TextView
            android:id="@+id/textView_Carb_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="Carboidratos"
            android:textColor="#5386D2"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/container_components_Carb"
            app:layout_constraintTop_toTopOf="@+id/container_components_Carb" />

        <TextView
            android:id="@+id/textView_Carb_Consumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView_Carb_Title"
            app:layout_constraintTop_toTopOf="@+id/container_components_Carb" />

        <TextView
            android:id="@+id/textView_Carb_Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="222dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView_Carb_Title"
            app:layout_constraintTop_toTopOf="@+id/container_components_Carb" />

        <ProgressBar
            android:id="@+id/progressbar_Protein"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:elevation="11dp"
            android:indeterminateOnly="false"
            android:progress="20"
            android:scrollbarSize="50dp"
            android:progressDrawable="@drawable/custom_progressbar_protein"
            app:layout_constraintBottom_toBottomOf="@+id/container_components_Carb3"
            app:layout_constraintEnd_toEndOf="@+id/container_components_Carb3"
            app:layout_constraintStart_toStartOf="@+id/container_components_Carb3"
            app:layout_constraintTop_toBottomOf="@+id/textView_Protein_Title" />

        <View
            android:id="@+id/container_components"
            android:layout_width="270dp"
            android:layout_height="220dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/container_components"
            android:elevation="5dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/container_components_Carb3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/container_components"
            android:elevation="5dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_components" />

        <ProgressBar
            android:id="@+id/progressBar_Calories"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:elevation="11dp"
            android:indeterminateOnly="false"
            android:progress="0"
            android:progressDrawable="@drawable/circle"
            android:scrollbarSize="50dp"
            app:layout_constraintEnd_toEndOf="@+id/container_components"
            app:layout_constraintStart_toStartOf="@+id/container_components"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/Calorias_Restantes_Text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="24dp"
            android:elevation="11dp"
            android:text="2.000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/container_components"
            app:layout_constraintEnd_toEndOf="@+id/container_components"
            app:layout_constraintStart_toStartOf="@+id/container_components"
            app:layout_constraintTop_toTopOf="@+id/container_components" />

        <TextView
            android:id="@+id/Total_Calorias_Text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="114dp"
            android:elevation="11dp"
            android:text="Calorias totais: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/container_components"
            app:layout_constraintEnd_toEndOf="@+id/container_components"
            app:layout_constraintStart_toStartOf="@+id/container_components"
            app:layout_constraintTop_toTopOf="@+id/container_components" />

        <TextView
            android:id="@+id/text_view_calories"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="11dp"
            android:text="Restantes"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/Calorias_Restantes_Text"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar_Calories"
            app:layout_constraintEnd_toEndOf="@+id/progressBar_Calories"
            app:layout_constraintStart_toStartOf="@+id/progressBar_Calories"
            app:layout_constraintTop_toTopOf="@+id/progressBar_Calories" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="11dp"
            android:text="Calorias"
            android:textColor="#000000"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="@+id/container_components"
            app:layout_constraintStart_toStartOf="@+id/container_components"
            app:layout_constraintTop_toTopOf="@+id/container_components" />

        <TextView
            android:id="@+id/textView_Protein_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="Proteínas"
            android:textColor="#EC5858"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/container_components_Carb3"
            app:layout_constraintTop_toTopOf="@+id/container_components_Carb3" />

        <TextView
            android:id="@+id/textView_Protein_Consumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView_Protein_Title"
            app:layout_constraintTop_toTopOf="@+id/container_components_Carb3" />

        <TextView
            android:id="@+id/textView_Protein_Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="244dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView_Protein_Title"
            app:layout_constraintTop_toTopOf="@+id/container_components_Carb3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>